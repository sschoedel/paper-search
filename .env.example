# Zotero API - Get from https://www.zotero.org/settings/keys
ZOTERO_LIBRARY_ID=your_user_id
ZOTERO_LIBRARY_TYPE=user
ZOTERO_API_KEY=your_api_key

# LLM for summarization (optional - set SUMMARIZATION_ENABLED=false to skip)
SUMMARIZATION_ENABLED=true
ANTHROPIC_API_KEY=sk-...
# OR use OpenAI instead:
# OPENAI_API_KEY=sk-...
# SUMMARIZATION_MODEL=gpt-4o-mini
SUMMARIZATION_MODEL=claude-3-haiku-20240307

# Collection
COLLECTION_HOUR=09
LOOKBACK_HOURS=24

# Rate Limits
ARXIV_RATE_LIMIT=1
LLM_RATE_LIMIT=10

LOG_LEVEL=INFO
